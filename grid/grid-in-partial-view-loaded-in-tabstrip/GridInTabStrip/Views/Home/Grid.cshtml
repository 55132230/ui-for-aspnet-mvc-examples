@(Html.Kendo().Grid<GridInTabStrip.Models.Customer>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.ID).Width(200);
            columns.Bound(c => c.Name);
        })
        .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("Select", "Home"))
        )
)
